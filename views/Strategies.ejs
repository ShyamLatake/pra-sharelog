<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Strategies</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/178f732bae.js" crossorigin="anonymous"></script>
    <link rel="icon" href="/test-images/logo.ico">
    <% if (theme === "dark") { %>
      <link href="/styles/dark/vertical-navbar.css" rel="stylesheet" type="text/css">
    <% } else { %>
      <link href="/styles/light/vertical-navbar.css" rel="stylesheet" type="text/css">
    <% } %>
    <% if (theme === "dark") { %>
      <link href="/styles/dark/Base.css" rel="stylesheet" type="text/css">
    <% } else { %>
      <link href="/styles/light/Base.css" rel="stylesheet" type="text/css">
    <% } %>
    
    <% if (theme === "dark") { %>
      <link href="/styles/dark/Strategies.css" rel="stylesheet" type="text/css">
    <% } else { %>
      <link href="/styles/light/Strategies.css" rel="stylesheet" type="text/css">
    <% } %>
    
</head>
<body>
    <div class="container0">
        
        <%- include("partials/vertical-navbar.ejs") %>

        <div class="horizontal-half">
            <%- include("partials/oopari-navbar.ejs", {Title: PageTitle, Name: Name, imgSrc: imgSrc}) %>
              
              <div class="container2">
                <div class="container-heading">
                  <h1 class="main-heading">Your Strategies</h1>
                </div>
                <div class="Bhandaari">

                    <div class="newAndSave">
                        <div class="input-group neecheWala">
                            <form class="form-inline" action="/Strategies" method="post">
                                <input type="search" class="form-control addNewStrat" placeholder="Add New Strategy..." name="Strat">
                                <button type="submit" class="newStrat">Save</button>
                                <br>
                                <input type="text" class="form-control addNewDesc " placeholder="Add Description of your new Strategy..." name="Descr">
                            </form>
                        </div>
                    </div>

                    <!-- <div class="newAndSave">
                        <div class="input-group neecheWala">
                            <form class="form-inline" action="/Strategies" method="post">
                                <input type="search" class="form-control addNewStrat" placeholder="Add New Strategy..." name="Strat">
                                <button type="submit" class="newStrat">Save</button>
                            </form>
                        </div>
                    </div> -->
                    

                    <div class="container-list-here">
                    <% for (var i = 0; i < list.length; i++) { %>
                      <form action="/del-strategy" method="post">
                        <div class="container-list-item">
                            <div class="container-content">
                                <div class="container-left">
                                  <h1 class="heading-list-serial-number"><%= i+1 %></h1>
                                  <div class="container-list-positons">
                                    <h1><%= list[i][0] %></h1>
                                  </div>
                                </div>
                                <div class="container-right">
                                  <button type="submit" class="delButton" name="submitStrat" value="<%= list[i][0]%>"><i class="fa-regular fa-trash-can fa-lg"></i></button>
                                </div>
                            </div>
                            <div class="dropped-description" >
                              <p class="description-here"><%= list[i][1] %></p>
                            </div>
                        </div>
                      </form>
                      <% } %>
                    </div>
    
            </div>
          </div>
        </div>
    </div>

    <script>$(document).ready(function(){
      $('.container-content').click(function(){
          // Toggle the 'active' class on the clicked container-content element
          $(this).toggleClass('active');
          $(this).siblings('.dropped-description').toggleClass('show');
      });
  
      // Prevent the click event from bubbling up to the parent container-list-item
      $('.dropped-description').click(function(event){
          event.stopPropagation();
      });
  });
  </script>
</body>
</html>